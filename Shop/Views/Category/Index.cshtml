@using Shop.Models.Entities
@model List<Category>
@{
    ViewData["Title"] = "Category";
}
<h1>Categories List</h1>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
            </tr>
        }
    </tbody>
</table>